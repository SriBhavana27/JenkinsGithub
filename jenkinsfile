pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package' // Assuming Maven is used for building
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                sh 'mvn test' // Assuming Maven is used for running tests
                // Run integration tests
            }
        }
        stage('Code Analysis') {
            steps {
                // Integrate a code analysis tool like SonarQube
                // For example:
                sh 'sonar-scanner' // Assuming SonarQube Scanner is configured
            }
        }
        stage('Security Scan') {
            steps {
                // Perform security scan using a tool like OWASP Dependency-Check
                // For example:
                sh 'dependency-check.sh --scan . --format HTML --out reports'
            }
        }
        stage('Deploy to Staging') {
            steps {
                // Deploy to staging server using a deployment tool like Ansible or AWS CodeDeploy
                // For example:
                sh 'ansible-playbook deploy-staging.yml'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                // Run integration tests on the staging environment
                // For example:
                sh 'curl http://staging-server:port/health-check'
            }
        }
        stage('Deploy to Production') {
            steps {
                // Deploy to production server
                // For example:
                sh 'ansible-playbook deploy-production.yml'
            }
        }
    }
    
    post {
        success {
            emailext subject: "Pipeline Success",
                      body: "Your Jenkins pipeline ran successfully.",
                      to: "sribhavana27@gmail.com",
                      attachLog: true
        }
        failure {
            emailext subject: "Pipeline Failure",
                      body: "Your Jenkins pipeline failed. Please check the logs.",
                      to: "sribhavana27@gmail.com",
                      attachLog: true
        }
    }
}
